# ============================================================================
# LUXORANOVA Enterprise AI Platform - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME=LUXORANOVA
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=luxoranova
POSTGRES_USER=luxoranova_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Redis Cache Settings
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=86400

# ----------------------------------------------------------------------------
# Vector Database (Qdrant)
# ----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=luxoranova_embeddings

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# SAML Configuration (Enterprise)
SAML_ENABLED=false
SAML_ENTITY_ID=
SAML_SSO_URL=
SAML_X509_CERT=

# API Keys
API_KEY_HEADER=X-API-Key
API_KEY_PREFIX=lxr_

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_32_chars
ENCRYPTION_ALGORITHM=AES-256-GCM

# ----------------------------------------------------------------------------
# AI Model Configuration
# ----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096

# Ollama (Local Models)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=300

# Model Selection Strategy
MODEL_SELECTION_STRATEGY=intelligent # intelligent, cost-optimized, performance
DEFAULT_MODEL_PROVIDER=openai # openai, anthropic, ollama

# ----------------------------------------------------------------------------
# Agent Configuration
# ----------------------------------------------------------------------------
# Agent Orchestration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY_SECONDS=5

# Hierarchical Settings
MAX_SUPERVISOR_DEPTH=3
MAX_WORKERS_PER_SUPERVISOR=5
TASK_DECOMPOSITION_MODEL=gpt-4-turbo-preview

# Agent Memory
AGENT_MEMORY_ENABLED=true
AGENT_MEMORY_MAX_TOKENS=8000
AGENT_MEMORY_WINDOW_SIZE=10

# ----------------------------------------------------------------------------
# Computer Use Configuration
# ----------------------------------------------------------------------------
# Browser Automation
BROWSER_AUTOMATION_ENABLED=true
BROWSER_TYPE=chromium # chromium, firefox, webkit
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Desktop Automation
DESKTOP_AUTOMATION_ENABLED=true
DESKTOP_SCREENSHOT_INTERVAL=1000
DESKTOP_ACTION_DELAY=500

# Vision Analysis
VISION_MODEL=gpt-4-vision-preview
VISION_MAX_TOKENS=1000
VISION_DETAIL_LEVEL=high # low, high, auto

# Safety Settings
COMPUTER_USE_SANDBOX=true
COMPUTER_USE_WHITELIST_DOMAINS=
COMPUTER_USE_BLACKLIST_DOMAINS=

# ----------------------------------------------------------------------------
# MCP (Model Context Protocol) Configuration
# ----------------------------------------------------------------------------
MCP_ENABLED=true
MCP_SERVER_PORT=8001
MCP_MAX_CONTEXT_SIZE=100000
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=3600

# MCP Servers
MCP_FILESYSTEM_ENABLED=true
MCP_DATABASE_ENABLED=true
MCP_API_ENABLED=true

# ----------------------------------------------------------------------------
# N8N Integration
# ----------------------------------------------------------------------------
N8N_ENABLED=true
N8N_HOST=http://localhost:5678
N8N_API_KEY=
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_WORKFLOW_SYNC=true

# ----------------------------------------------------------------------------
# Message Queue Configuration
# ----------------------------------------------------------------------------
# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# ----------------------------------------------------------------------------
# Storage Configuration
# ----------------------------------------------------------------------------
# Local Storage
STORAGE_TYPE=local # local, s3, gcs, azure
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE_MB=100

# S3 (AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=luxoranova-storage

# GCS (Google Cloud)
GCS_PROJECT_ID=
GCS_BUCKET=luxoranova-storage
GCS_CREDENTIALS_PATH=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=luxoranova-storage

# ----------------------------------------------------------------------------
# Email Configuration
# ----------------------------------------------------------------------------
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp # smtp, sendgrid, ses, mailgun
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@luxoranova.io
SMTP_FROM_NAME=LUXORANOVA

# SendGrid
SENDGRID_API_KEY=

# AWS SES
AWS_SES_REGION=us-east-1

# ----------------------------------------------------------------------------
# Monitoring & Observability
